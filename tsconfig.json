{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "exclude": ["**/node_modules", "**/.*/", "types/raw"],
  "include": [
    "index.d.ts",
    "next-env.d.ts",
    "components/**/*",
    "features/**/*",
    "hooks/**/*",
    "lib/**/*",
    "pages/**/*",
    "types/**/*",
    "utils/**/*"
  ]
}
